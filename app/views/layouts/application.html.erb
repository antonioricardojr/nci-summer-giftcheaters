<!DOCTYPE html>
<html>
<head>
	<title><%= full_title(yield(:title)) %></title>
	<%= stylesheet_link_tag    "application", :media => "all" %>
	
	<%= csrf_meta_tags %>
	<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body id="page-top"  class="index">
	<!-- Navigation -->
	<nav class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header page-scroll">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<%= link_to site_name, site_url, :class => "navbar-brand", :href => current_page?(root_path) ? '#page-top' : '/' %>
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav navbar-right">
					<li class="page-scroll <%= 'active' if current_page?(about_path) %>">
						<a href="<%= current_page?(root_path) ? '#about' : about_path %>">About</a>
					</li>
					<li class="page-scroll <%= 'active' if current_page?(contact_path) %>">
						<a href="<%= current_page?(root_path) ? '#contact' : contact_path %>">Contact</a>
					</li>
					<% if session[:access_token]%>
					<li class="page-scroll" ><%= link_to "Logout", logout_path %>
					</li>
					<% end -%>
				</ul>
			</div>
			<!-- /.navbar-collapse -->
			<!-- Alerts -->
			<% if flash[:notice] %>
			<div class="alert alert-success alert-dismissible col-lg-6" role="alert">
				<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<%= flash[:notice] %>
			</div>
			<% end %>
		</div>
		<!-- /.container-fluid -->
	</nav>

	<%= yield %>
	<!-- Footer -->

	<!-- Footer -->
	<footer class="text-center">
		<div class="footer-below">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						&copy;2014 GiftCheaters - <a href="/privacypolicy">Privacy Policy</a>
					</div>
				</div>
			</div>
		</div>
	</footer>
	
</body>
</html>
