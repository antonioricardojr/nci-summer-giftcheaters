<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>Contact Me</h2>
        <hr class="star-primary">
      </div>
    </div>
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <%= form_for @message, :url => contact_path do |form| %>
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label for="message_name">Name</label>
            <input type="text" class="form-control" placeholder="Name" id="message_name" name="message[name]" size="30" required data-validation-required-message="Please enter your name.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label for="message_email">Email Address</label>
            <input type="email" class="form-control" placeholder="Email Address" id="message_email" name="message[email]" size="30" required data-validation-required-message="Please enter your email address.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label for="message_subject">Subject</label>
            <input type="tel" class="form-control" placeholder="Subject" id="message_subject" name="message[subject]" required data-validation-required-message="Please enter your phone number.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label for="message_message">Message</label>
            <textarea rows="5" class="form-control" placeholder="Message" id="message_body" name="message[body]" required data-validation-required-message="Please enter a message."></textarea>
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <br>
        <div id="success"></div>
        <div class="row">
          <div class="form-group col-xs-12">
            <button name="commit" type="submit" value="Send" class="btn btn-success btn-lg">Send</button>
          </div>
        </div> 
        <% end %>

      </div>
    </div>
  </div>
</section>

<%= render( :partial => 'layouts/jsincludesnormal.html', :formats => [:html]) %>