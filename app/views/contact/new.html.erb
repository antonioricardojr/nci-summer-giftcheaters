<%= form_for @message, :url => contact_path do |form| %>
<fieldset class="fields hero-unit" align="left">
  <table>
    <tr>
    </tr>
    
    <td valign="top">
      <%= form.label :name %>
    </td>
    <td valign="top">
      <%= form.text_field :name %>
    </td>

    <tr>
    </tr>

    <td valign="top">
      <%= form.label :email %>
    </td>
    <td valign="top">
      <%= form.text_field :email %>
    </td>

    <tr>
    </tr>

    <td valign="top">
      <%= form.label :subject %>
    </td>
    <td valign="top">
      <%= form.text_field :subject %>
    </td>

    <tr>
    </tr>

    <td valign="top">
    <%= form.label :message %>
    </td>
    <td valign="top">
      <%= form.text_area :body %>
      
    </td>
    <td>
      <fieldset class="actions" valign="left">
        <%= form.submit "Send" %>

      </fieldset>
    </td>
    
  </fieldset>
</table>      

<% end %>